extends ../layout

block content
    div(class="article-add")
        div(class="article-add__bg")
        div(class="wrapper")
            h1=title
            form(class="article-add__form" method="post")
                lable(class="article-add__form-lable" for="article-title")
                    input(
                            type="text" 
                            placeholder="Title" 
                            class="article-add__form-input" 
                            id="article-title"
                            name="title"
                            required
                        )
                lable(class="article-add__form-lable" for="article-tags")
                    input(
                            type="text" 
                            placeholder="tag, tag, tag,"  
                            class="article-add__form-input" 
                            id="article-tags"
                            name="tags"
                        )
                lable(class="article-add__form-lable" for="article-img")
                    input(
                            type="text" 
                            placeholder="img url"  
                            class="article-add__form-input" 
                            id="article-img"
                            name="img"
                        )
                lable(class="article-add__form-lable" for="textarea")
                    textarea(
                            placeholder="Article..."  
                            class="article-add__form-input" 
                            id="textarea"
                            name="content"
                        )
                button(typ="submit" class="article-add__form-button") Publish